                        <b>Address: {{user.address}}</b><br>
                        <b>Contact Number: {{user.contactNumber}}</b>
                    </div>
                </div><br>
            <p>
                <a class="btn btn-primary" data-bs-toggle="collapse" href="#multiCollapseExample1" role="button" aria-expanded="false" aria-controls="multiCollapseExample1">Change Information</a>
            </p>
            <div class="row">
                <div class="col">
                    <div class="collapse multi-collapse" id="multiCollapseExample1">
                    <div class="card card-body" style="width: 200%">
                    <div class="row py-2">
                                        <div class="col-md-6">
                                        <label for="lastname">Full Name</label>
                                        <input type="text" class="name" name="name" oninput="checkName()"  value="">
                                        <span class="error name-error"></span>
                                    </div>
                                    <div class="col-md-6 pt-md-0 pt-3">
                                        <label for="lastname">Username</label>
                                        <input type="text" class="username" name="username" oninput="checkUsername()" value="">
                                        <span class="error username-error"></span>
                                    </div> 
                                </div>
                                <div class="row py-2">
                                    <div class="col-md-6">
                                        <label for="email">Email Address</label>
                                        <input type="text" class="email" name="email" oninput="checkEmail()" value="">
                                        <span class="error email-error"></span> 
                                    </div>
                                    <div class="col-md-6 pt-md-0 pt-3">
                                        <label for="phone">Phone Number</label>
                                        <input type="number" class="contactNumber" name="contactNumber" oninput="checkContNum()" maxlength = "11" value="">
                                        <span class="error contactnumber-error"></span> 
                                    </div>
                                </div>
                                <div class="row py-2">
                                    <div class="col-md-6">
                                        <label for="phone">Password</label>
                                        <input type="password" class="password" id="password" name="password"  oninput="checkPassword()" value="">
                                        <span class="error password-error"></span>
                                        </div>
