    <body>
      <main>
        <form id="overall" action="/signupexample" method="post" enctype="multipart/form-data" >
            <div class="wrapper bg-white mt-sm-5">
                <h4 class="pb-4 border-bottom">Account settings</h4>
                <div class="form" id="form1">
                     <div class="d-flex align-items-start py-3 border-bottom">
                   <img src="{{user.avatar}}" style="width: 150px; height: 150px;">
                    <div class="pl-sm-4 pl-2" id="img-section">
                        <b>Profile Photo</b>
                            <label for="images"> Picture </label>
                                        <input type="file" name="images" > <br><br>
                    </div>
                </div>
                    <div class="row py-2">
                            <div class="col-md-6">
                            <label for="lastname">Full Name</label>
                            <input type="text" class="name" name="name" placeholder="FirstName MI. LastName" oninput="checkName()"  value="">
                            <span class="error name-error"></span>
                        </div>
                        <div class="col-md-6 pt-md-0 pt-3">
                            <label for="lastname">Username</label>
                            <input type="text" class="username" name="username" placeholder="Username" oninput="checkUsername()" value="">
                            <span class="error username-error"></span>
                        </div> 
                    </div>
                    <div class="row py-2">
                        <div class="col-md-6">
                            <label for="email">Email Address</label>
                            <input type="text" class="email" name="email" placeholder="example@example.com" oninput="checkEmail()" value="">
                            <span class="error email-error"></span> 
                        </div>
                         <div class="col-md-6 pt-md-0 pt-3">
                            <label for="phone">Phone Number</label>
                            <input type="number" class="contactNumber" name="contactNumber" placeholder="Contact Number" oninput="checkContNum()" maxlength = "11" value="">
                            <span class="error contactnumber-error"></span> 
                        </div>
                    </div>
                    <div class="row py-2">
                        <div class="col-md-6">
                            <label for="phone">Password</label>
                            <input type="password" class="password" id="password" name="password" placeholder="Password" oninput="checkPassword()" value="">
                            <span class="error password-error"></span>
                            </div>
                        <div class="col-md-6 pt-md-0 pt-3">
                            <label for="phone">House number and lot number</label>
                            <input type="text" class="address1" name="address1" placeholder="House number & lot number" oninput="checkAdd1()" size="23" value="">
                            <span class="error address1-error"></span>
                        </div>
                    </div>
                    <div class="row py-2">
                        <div class="col-md-6">
                            <label for="phone">Barangay</label>
                            <input type="text" class="address2" name="address2" placeholder="Barangay" oninput="checkAdd2()"  value="" style="auto">
                            <span class="error address2-error"></span>
                        </div>
                        <div class="col-md-6 pt-md-0 pt-3">
                             <label for="phone">City</label>
                            <input type="text" class="address3" name="address3" placeholder="City" oninput="checkAdd3()" size="24px" value="" style="">
                            <span class="error address3-error"></span>  
                        </div>
                    </div>
                    <div class="row py-2">
                        <div class="col-md-6">
                            <label for="phone">Province</label>
                            <input type="text" class="address4" name="address4" placeholder="Province" oninput="checkAdd4()" value="" style="auto">
                            <span class="error address4-error"></span> 
                        </div>
                        <div class="col-md-6 pt-md-0 pt-3">
                            <label for="phone">Zip Code</label>
                            <input type="number" class="zipcode" name="zipcode" placeholder="Zip Code" oninput="checkZip()" size="4" maxlength="4" value="" style="" >
                            <span class="error zipcode-error" style=" "></span>
                        </div>
                    </div>
                    <div class="py-3 pb-4 border-bottom">
                        <button type="submit">Submit</button>
                    </div> 
                </div>   
            </div>
        </form>
